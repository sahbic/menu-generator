{
  "kind": "collectionType",
  "collectionName": "recipes",
  "info": {
    "name": "Recipe"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "recipename": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "picture": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "description": {
      "type": "richtext"
    },
    "excerpt": {
      "type": "richtext"
    },
    "ingredients": {
      "type": "component",
      "repeatable": true,
      "component": "category.ingredient",
      "required": true
    }
  }
}
